extends layout
block content
    .card.w-80
        h5.card-header.text-center= title
        .card-body
            .row
                .col
                    table.table.table-striped
                        tbody
                        tr
                        th(scope='col') Parent Name
                        td #{household.parentFirstName} #{household.parentLastName}
                        tr
                        th(scope='col') Street Address
                        td #{household.streetAddress}
                        tr
                        th(scope='col') City
                        td #{household.city}
                        tr
                        th(scope='col') State
                        td #{household.state}
                        tr
                        th(scope='col') Zip
                        td #{household.zip}
                        tr
                        th(scope='col') Phone
                        td #{household.phone}
                        tr
                        th(scope='col') Alternate Phone
                        td #{household.altphone}
                        tr
                        th(scope='col') Billing Cycle
                        td #{household.billingCycle}
                        tr
                        td
                            form(action=`/household/${household.householdID}/delete` , method='POST')
                                input#submit.form-control.btn.btn-danger.btn-sm(type='submit', value='Delete Household')
                .col
                    form(action=`/household/${household.householdID}/edit` , method='POST')
                        div.form-group
                            label.control-label(for='parentfirstname') Parent First Name:
                            input#parentfirstname.form-control(type='text', name='parentfirstname', required='' placeholder='Parent First Name')
                        div.form-group
                            label.control-label(for='parentlastname') Parent Last Name:
                            input#parentlastname.form-control(type='text', name='parentlastname', required='' placeholder='Parent Last Name')
                        div.form-group
                            label.control-label(for='streetaddress') Street Address:
                            input#streetaddress.form-control(type='text', name='streetaddress', required=''  placeholder='Street Address')
                        div.form-group
                            label.control-label(for='city') City:
                            input#city.form-control(type='text', name='city', required=''  placeholder='City')
                        div.form-group
                            label.control-label(for='state') State:
                            select#state.form-control(name='state')
                                option(value="TX") Texas
                        div.form-group
                            label.control-label(for='zip') Zip Code:
                            input#zip.form-control(type='text', name='zip', required=''  placeholder='Zip Code')
                        div.form-group
                            label.control-label(for='phone') Phone:
                            input#phone.form-control(type='text', name='phone', required='' placeholder='555-555-5555')
                        div.form-group
                            label.control-label(for='altphone') Alternate Phone:
                            input#altphone.form-control(type='text', name='altphone', placeholder='555-555-5555')
                        div.form-group
                            label.control-label(for='billingcycle') Billing Cycle:
                            select#billingcycle.form-control(name='billingcycle', required='')
                                option(value="Monthly") Monthly
                                br
                                option(value="Weekly") Weekly
                                        
                        .form-group
                            input#submit.form-control.btn.btn-primary.btn-md(type='submit', value='Edit Household')
                            p
                            input#reset.form-control.btn.btn-danger.btn-md(type='reset', value='Reset Form')