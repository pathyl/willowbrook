extends layout
block content
    .card
        h4.card-header.text-center= title
        .card-body
                .col-md-4
                .col-md-4
                    form(action='/createlogin', method='POST')
                        .form-row
                            .form-group
                                label.control-label(for='username') Username: 
                                input#username.form-control(type='text', name='username', required='')
                            .form-group
                                label.control-label(for='password') Password: 
                                input#password.form-control(type='password', name='password', required='')
                            .form-group.text-center
                                p
                                input#submit.form-control.btn.btn-primary.btn-md(type='submit', value='Add User')
                .col-md-4